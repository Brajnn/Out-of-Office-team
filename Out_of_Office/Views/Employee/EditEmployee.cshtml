@model Out_of_Office.Application.Employee.EmployeeDto

@{
    ViewData["Title"] = "Edit Employee";
}

<h1>Edit Employee</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subdivision" class="control-label"></label>
                <input asp-for="Subdivision" class="form-control" />
                <span asp-validation-for="Subdivision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HireDate" class="control-label"></label>
                <input asp-for="HireDate" class="form-control" />
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option>Active</option>
                    <option>Inactive</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeoplePartnerID" class="control-label"></label>
                <input asp-for="PeoplePartnerID" class="form-control" />
                <span asp-validation-for="PeoplePartnerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutOfOfficeBalance" class="control-label"></label>
                <input asp-for="OutOfOfficeBalance" class="form-control" />
                <span asp-validation-for="OutOfOfficeBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" type="file" class="form-control-file" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <h4>Leave Balances</h4>
            @for (int i = 0; i < Model.LeaveBalances.Count; i++)
            {
                <div class="form-group">
                    <label class="control-label">@Model.LeaveBalances[i].Type Days</label>

                    <input asp-for="LeaveBalances[@i].DaysAvailable" class="form-control" />

                    <input type="hidden" asp-for="LeaveBalances[@i].Type" />

                </div>
            }
        </form>
    </div>
    
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

