@model Out_of_Office.Application.Employee.EmployeeDto
@{
    ViewData["Title"] = "Employee Details";
}

<h2>Employee Details</h2>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Subdivision</dt>
        <dd class="col-sm-10">@Model.Subdivision</dd>

        <dt class="col-sm-2">Position</dt>
        <dd class="col-sm-10">@Model.Position</dd>
        <dt class="col-sm-2">Hire date</dt>
        <dd class="col-sm-10">@Model.HireDate</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">People Partner ID</dt>
        <dd class="col-sm-10">@Model.PeoplePartnerID</dd>

        <dt class="col-sm-2">Out Of Office Balance</dt>
        <dd class="col-sm-10">@Model.OutOfOfficeBalance</dd>

        @if (Model.Photo != null && Model.Photo.Length > 0)
        {
            <dt class="col-sm-2">Photo</dt>
            <dd class="col-sm-10">
                <img src="data:image;base64,@Convert.ToBase64String(Model.Photo)" alt="Employee Photo" style="max-width:200px;" />
            </dd>
        }
    </dl>
    <dt class="col-sm-2">Leave Balances</dt>
    <dd class="col-sm-10">
        <table class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Days Available</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lb in Model.LeaveBalances)
                {
                    <tr>
                        <td>@lb.Type</td>
                        <td>@lb.DaysAvailable</td>
                    </tr>
                }
            </tbody>
        </table>
    </dd>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
