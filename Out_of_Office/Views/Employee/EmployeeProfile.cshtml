@model Out_of_Office.Application.Employee.EmployeeDto

@{
    ViewData["Title"] = "My Profile";
}

<h2 class="mb-4 text-center">My Profile</h2>

<div class="card shadow-sm p-4 mb-4">
    <div class="row">
        <div class="col-md-4 text-center">
            @if (Model.Photo != null && Model.Photo.Length > 0)
            {
                var base64 = Convert.ToBase64String(Model.Photo);
                var imgSrc = $"data:image/png;base64,{base64}";
                <img src="@imgSrc" alt="Profile Photo" class="img-fluid rounded-circle mb-3" style="max-height: 200px;" />
            }
            else
            {
                <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center" style="height: 200px; width: 200px;">
                    <span>No Photo</span>
                </div>
            }
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Full Name</dt>
                <dd class="col-sm-8">@Model.FullName</dd>

                <dt class="col-sm-4">Position</dt>
                <dd class="col-sm-8">@Model.Position</dd>

                <dt class="col-sm-4">Subdivision</dt>
                <dd class="col-sm-8">@Model.Subdivision</dd>

                <dt class="col-sm-4">Hire Date</dt>
                <dd class="col-sm-8">@Model.HireDate.ToString("dd MMM yyyy")</dd>

                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8">
                    @if (Model.Status == "Active")
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </dd>

            </dl>

            <h5 class="mt-4">Leave Balances</h5>
            <ul class="list-group">
                @foreach (var balance in Model.LeaveBalances)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @balance.Type
                        <span class="badge bg-primary rounded-pill">@balance.DaysAvailable days</span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<div class="text-center">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Profile</a>
</div>
